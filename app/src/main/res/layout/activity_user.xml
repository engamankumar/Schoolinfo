<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26C6DA"
    tools:context="com.example.aman.schoolinfo.user">

    <TextView
        android:id="@+id/notify"
        android:layout_width="325dp"
        android:layout_height="328dp"
        android:layout_marginEnd="16dp"

        android:layout_marginStart="16dp"
        android:background="#26C6DA"
        android:hint="No new message. "
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/background_dark"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usubject" />
    <TextView
        android:id="@+id/messagewindow"
        android:layout_width="358dp"
        android:layout_height="59dp"
        android:background="@android:color/background_light"
        android:text="Message"
        android:textAlignment="center"
        android:textColor="#26C6DA"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usubject"
        android:layout_width="319dp"
        android:layout_height="54dp"
        android:layout_marginEnd="16dp"


        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:background="#26C6DA"
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messagewindow" />

    <TextView
        android:id="@+id/udate"
        android:layout_width="130dp"
        android:layout_height="39dp"
        android:layout_marginBottom="41dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="214dp"
        android:layout_marginTop="2dp"
        android:background="#26C6DA"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notify" />


</android.support.constraint.ConstraintLayout>
