<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="#26C6DA"
    tools:context="com.example.aman.schoolinfo.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="359dp"
        android:layout_height="37dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/background_light"
        android:text="Welcome to Our School App"
        android:textAlignment="viewEnd"
        android:textAllCaps="true"
        android:textColor="#26C6DA"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/userpage"
        android:layout_width="271dp"
        android:layout_height="61dp"

        android:layout_marginBottom="155dp"
        android:layout_marginEnd="44dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/buttonshap"
        android:shadowColor="#A8234B"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"
        android:text="Enter into the App"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="137dp"
        android:layout_height="125dp"
        android:layout_marginEnd="111dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="57dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/sch" />

    <ImageButton
        android:id="@+id/adminpage"
        android:layout_width="38dp"
        android:layout_height="33dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/clo" />


</android.support.constraint.ConstraintLayout>
